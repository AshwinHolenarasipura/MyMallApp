                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@id/laycategory"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/shoppingofferscontainer"
                    android:layout_width="match_parent"
                    android:layout_height="110dp">

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/buzzlay2"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_below="@id/frameLayout3"
                android:layout_marginTop="7dp"
                android:background="@drawable/shoppingbuzzer">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="#66000000" />

                <TextView
                    android:id="@+id/shoppinbuzztxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="130dp"
                    android:layout_marginTop="11dp"
                    android:text="Shopping Buzz"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/shoppingbuzz_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/shoppinbuzztxt"
                    android:layout_marginTop="12dp">

                </FrameLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/foodtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buzzlay2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="35dp"
                android:text="FOOD"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/frameLayout4"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_below="@id/foodtxt"
                android:layout_marginTop="11dp"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/foodcontainer"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">

                    <TextView
                        android:id="@+id/nofoodfoundtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Sorry no Food courts found here:("
