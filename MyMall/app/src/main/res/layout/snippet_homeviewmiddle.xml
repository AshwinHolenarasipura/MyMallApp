                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/moviebuzz_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/moviebuzztxt"
                    android:layout_marginTop="12dp">

                </FrameLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/shoppingtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/buzzlay1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="35dp"
                android:text="SHOPPING"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/frameLayout2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_below="@id/shoppingtxt"
                android:layout_marginTop="11dp"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/shoppingcontainer"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">

                    <TextView
                        android:id="@+id/noshoppingfoundtxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Sorry no shops found here:("
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:visibility="invisible" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </android.support.v7.widget.RecyclerView>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/laycategory"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_below="@id/frameLayout2"
                android:layout_marginTop="5dp"
                android:background="@color/white">

                <FrameLayout
